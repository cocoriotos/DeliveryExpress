<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.julian_gonzalez.deliveryexpress.LoginActivity"
    android:orientation="vertical"
    android:background="#e98989"
    android:weightSum="1">

    <!-- Login progress -->

    <ImageView
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:id="@+id/imageView"
        android:background="@drawable/DeliveryExpress" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Bienvenido a su aplicación para hacer pedidos a su Tienda Preferida" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por Favor Digitar su Password"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EditText"
        android:layout_gravity="left" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/button"
        android:layout_weight="0.64"
        android:layout_gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regístrate"
        android:id="@+id/button2"
        android:layout_gravity="left" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_weight="0.55"
        android:text="Esta Aplicación tiene como objetivo poder hacer pedidos diarios a la tienda de barrio más cercana o de confianza donde podrá ver los precios que le van a cobrar y hacer su adicion al carro de compreas, también verá el cobre por domicilio y ofertas del tendero"
        android:background="#fafafa" />

</LinearLayout>
